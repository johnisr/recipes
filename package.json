{
  "name": "recipes",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "jest": {
    "displayName": "server",
    "setupTestFrameworkScriptFile": "./tests/setup.js",
    "testPathIgnorePatterns": ["<rootDir>/client"]
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build":
      "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "npm run build",
    "test": "jest",
    "testclient": "npm run test --prefix client",
    "testAll": "concurrently \"npm run test\" \"npm run testclient\"",
    "testWatch": "jest --watchAll",
    "testclientWatch": "npm run testWatch --prefix client",
    "testWatchAll":
      "concurrently \"npm run testWatch\" \"npm run testclientWatch\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.5.1",
    "cookie-session": "^2.0.0-beta.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jest": "^23.0.0",
    "keygrip": "^1.0.2",
    "mongoose": "^5.1.2",
    "nodemon": "^1.17.5",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "puppeteer": "^1.4.0",
    "safe-buffer": "^5.1.2",
    "supertest": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "prettier": "1.12.1"
  }
}
